@model EventModel

@{
    ViewData["Title"] = "Dodaj wydarzenie";

}
        <div class="container">	
			<!-- ======= Intro Section ======= -->
			<section class="section-services section-t8">
				<div class="row">
					<div class="col-md-12">
						<div class="title-wrap d-flex justify-content-between">
							<div class="title-box">
                        <h2 class="title-a">Dodaj wydarzenie</h2>
                            <p class="color-b">Wypełnij dane poniżej</p>
							</div>
						</div>
					</div>
				</div>
			</section><!-- End Intro Section -->
            <!-- Input Event Form -->
            <!-- TODO: better form styling -->
            <form method="post" action="Add" class="php-email-form">
                <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-lg form-control-a" placeholder="Nazwa eventu" required asp-for="Name">
                            </div>
                        </div>
                         <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-lg form-control-a" placeholder="Organizator" asp-for="Organizer">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="date" class="form-control form-control-lg form-control-a" placeholder="Data" required asp-for="Date">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-lg form-control-a" placeholder="Miejsce" required asp-for="Place">
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <textarea class="form-control form-control-lg form-control-a" placeholder="Opis wydarzenia" asp-for="Description"></textarea>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="number" class="form-control form-control-lg form-control-a" placeholder="Cena" asp-for="Price">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <input type="number" class="form-control form-control-lg form-control-a" placeholder="Pojemność" asp-for="Capacity">
                            </div>
                        </div>
                        <!-- TODO: add image -->
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <select class="form-control" asp-for="Target">
                                    <option value="all">Wszyscy</option>
                                    <option value="grandpas">Seniorzy</option>
                                    <option value="adults">Dorośli</option>
                                    <option value="kids">Dzieci</option>
                                </select>
                            </div>
                        </div>
                    <button class="btn btn-b">Wyślij</button>
                </div>
            </form><!-- End Input Form -->
        </div>