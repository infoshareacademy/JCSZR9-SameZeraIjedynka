@model IEnumerable<EventModel>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<p>
    <a asp-action="Index">Ulubione</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                <label asp-for="First().Name"></label>
            </th>
            <th>
                <label asp-for="First().Date"></label>
            </th>
            <th>
                <label asp-for="First().Organizer"></label>
            </th>
            <th>
                <label asp-for="First().Place"></label>
            </th>
            <th>
                <label asp-for="First().Price"></label>
            </th>
            <th>
                <label asp-for="First().Capacity"></label>
            </th>
            <th>
                <label asp-for="First().Target"></label>
            </th>
            <th>
                <label asp-for="First().IsFavourite"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Organizer
                </td>
                <td>
                    @item.Place
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Capacity
                </td>
                <td>
                    @item.Target
                </td>
                <td>
                    @item.IsFavourite
                </td>
                <td>
                    <a asp-action="Details" asp-route-data="@item.Id">Details</a>
                    <a asp-action="Edit" asp-route-data="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-data="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>